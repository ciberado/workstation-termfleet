# Termfleet Configuration

# Server Configuration
TERMFLEET_PORT=3000
NODE_ENV=development

# Domain Configuration
TERMFLEET_BASE_DOMAIN=ws.aprender.cloud

# Health Check Configuration (milliseconds)
TERMFLEET_WORKSTATION_CHECK_INTERVAL=20000
TERMFLEET_HEALTH_CHECK_TIMEOUT=10000

# Spaceship.com API Credentials
TERMFLEET_SPACESHIP_API_KEY=your_api_key_here
TERMFLEET_SPACESHIP_API_SECRET=your_api_secret_here

# Logging Configuration
TERMFLEET_LOG_LEVEL=debug
TERMFLEET_LOG_DIR=./logs

# Database Configuration
TERMFLEET_DB_PATH=./data/termfleet.db

# Rate Limiting Configuration (milliseconds)
TERMFLEET_RATE_LIMIT_WINDOW=900000
TERMFLEET_RATE_LIMIT_MAX_REQUESTS=100

# DNS Configuration
TERMFLEET_DNS_TTL=600
